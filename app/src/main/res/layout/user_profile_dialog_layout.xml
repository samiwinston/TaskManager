<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/user_profile_layout_initials"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/circular_label"
            android:gravity="center"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/user_profile_layout_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/user_profile_layout_initials"
            android:ellipsize="end"
            android:lines="1"
            android:paddingLeft="5dp"
            />
    </RelativeLayout>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/user_profile_layout_logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_exit_to_app_black_30dp"
        android:layout_alignParentEnd="true"
        android:background="@color/colorWhite"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>



</RelativeLayout>