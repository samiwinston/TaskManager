<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <TextView android:id="@+id/comment_item_layout_posted_by"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView android:id="@+id/comment_item_layout_date_posted"
        android:textSize="12sp"
        android:layout_below="@id/comment_item_layout_posted_by"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView android:id="@+id/comment_item_layout_comment"
        android:textSize="14sp"
        android:layout_below="@id/comment_item_layout_date_posted"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/shape_bg_incoming_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</RelativeLayout>