<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/peers_on_leave_employee"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:textStyle="bold"
    />

    <ImageView android:contentDescription="An icon which represents a an approved leave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/peers_on_leave_status"
        android:src="@drawable/ic_check_circle_green_20dp"
        android:layout_toRightOf="@id/peers_on_leave_employee"/>
    <TextView android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/peers_on_leave_duration"
        android:layout_below="@id/peers_on_leave_employee"/>
</RelativeLayout>